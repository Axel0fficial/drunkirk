{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@app/*": ["app/*"],
      "@src/*": ["src/*"],
      "@state/*": ["src/state/*"],
      "@domain/*": ["src/domain/*"],
      "@data/*": ["src/data/*"],
      "@ui/*": ["src/ui/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
